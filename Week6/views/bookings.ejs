<%- include('header') %>
    <main>
        <section>
            <div class="container">
                <div class="row">
                    <div class="col s12 center-align">
                        <h3 class="aum-extrabold aum-text-3xl">Bookings</h3>
                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row">
                    <% bookings.forEach(booking=> { %>
                        <div class="col s4">
                            <div class="card medium">
                                <div class="card-image">
                                    <img src="<%= booking.pizzaImageUrl %>">
                                </div>

                                <div class="card-content">
                                    <span class="card-title activator grey-text text-darken-4 font-Pacifico">
                                        <%= booking.pizzas %><i class="material-icons right">more_vert</i>
                                    </span>
                                    <p>
                                        <%= booking.restaurantName %>
                                    </p>

                                </div>

                                <div class="card-action aum-bc-green">
                                    <a class="white-text">More
                                        Information</a>
                                </div>

                                <div class="card-reveal">
                                    <span class="card-title grey-text text-darken-4 font-Pacifico">
                                        <%= booking.restaurantName %><i class="material-icons right">close</i>
                                    </span>
                                    <p class="card-text">
                                        <%= booking.pizzas %>
                                    </p>
                                    <p class="card-text aum-extrabold">Ordered By:</p>
                                    <p class="card-text">
                                        <%= booking.name %>
                                    </p>
                                    <p class="card-text">
                                        <%= booking.phone %>
                                    </p>
                                </div>

                            </div>
                        </div>
                        <% }) %>

                </div>
            </div>
        </section>
    </main>
    <%- include('footer') %>